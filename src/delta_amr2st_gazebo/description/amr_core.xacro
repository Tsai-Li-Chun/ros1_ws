<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="materials.xacro" />

    <link name="base_link">
    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <geometry>
                <box size="0.8 0.48 0.37"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <geometry>
                <box size="0.8 0.48 0.37"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.8" y="0.48" z="0.37">
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- LEFT WHEEL -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.2738 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.11" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.11" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.11">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.2738 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.11" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.11" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.11">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTER WHEELS -->

    <joint name="caster_wheel_joint1" type="continuous">
        <parent link="chassis"/>
        <child link="caster_wheel1"/>
        <origin xyz="0.375 0.215 -0.03" rpy="0 0 0"/>
    </joint>

    <link name="caster_wheel1">
        <visual>
            <geometry>
                <sphere radius="0.08" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.08" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.08">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <joint name="caster_wheel_joint2" type="continuous">
        <parent link="chassis"/>
        <child link="caster_wheel2"/>
        <origin xyz="-0.375 0.215 -0.03" rpy="0 0 0"/>
    </joint>

    <link name="caster_wheel2">
        <visual>
            <geometry>
                <sphere radius="0.08" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.08" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.08">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <joint name="caster_wheel_joint3" type="continuous">
        <parent link="chassis"/>
        <child link="caster_wheel3"/>
        <origin xyz="0.375 -0.215 -0.03" rpy="0 0 0"/>
    </joint>

    <link name="caster_wheel3">
        <visual>
            <geometry>
                <sphere radius="0.08" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.08" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.08">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <joint name="caster_wheel_joint4" type="continuous">
        <parent link="chassis"/>
        <child link="caster_wheel4"/>
        <origin xyz="-0.375 -0.215 -0.03" rpy="0 0 0"/>
    </joint>

    <link name="caster_wheel4">
        <visual>
            <geometry>
                <sphere radius="0.08" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.08" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.08">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

</robot>